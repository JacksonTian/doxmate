#!/usr/bin/env node

/**
 * Module dependencies.
 */

var program = require('commander'),
  fs = require('fs'),
  path = require('path'),
  doxmate = require('../');

// options

program
  .option('-s, --skin <folder>', 'where is the skin.', 'default');

program.on('--help', function () {
  console.log('  Commands:');
  console.log('');
  console.log('    list          show all api docs theme');
  console.log('    configure     custom api doc theme');
  console.log('');
  console.log('  Examples:');
  console.log('');
  console.log('    $ doxmate theme list');
  console.log('');
  process.exit();
});

program.parse(process.argv);

// args void of cmd

var args = process.argv.slice(3);

// command

var cmd = program.args[0];

// display help

function showHelp() {
  process.stdout.write(program.helpInformation());
  program.emit('--help');
}

if (!cmd) {
  return showHelp();
}

if (cmd === 'list') {
  console.log(doxmate.list());
} else if (cmd === 'configure') {
  doxmate.options(program.skin);
  console.log('Generated at "' + path.resolve('.') + '".');
  console.log('You can edit "' + path.resolve('.', 'doxmate-templates/'+program.skin)+ '"  configuration theme style.');
} else {
  return showHelp();
}