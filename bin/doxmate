#!/usr/bin/env node

/**
 * Module dependencies.
 */

var program = require('commander'),
  spawn = require('win-spawn'),
  fs = require('fs'),
  path = require('path'),
  join = path.join,
  doxmate = require('../'),
  exists = fs.existsSync;

program
  .version(doxmate.version)

// examples

program.on('--help', function(){
  console.log('  Commands:');
  console.log();
//  console.log('    install <url>    install theme');
  console.log('    build            create a api docs');
  console.log('    ls list          show all api docs theme');
  console.log();
  console.log('  Examples:');
  console.log('');
  console.log('    $ doxmate build -i <folder>');
  console.log('');
  process.exit();
});

// parse argv

program.parse(process.argv);

// args void of cmd

var args = process.argv.slice(3);

// command

var cmd = program.args[0];


// display help

if (!cmd) {
  process.stdout.write(program.helpInformation());
  program.emit('--help');
  process.exit();
}

// executable

var bin = 'doxmate-' + cmd;

// local

var local = join(__dirname, bin);
if (exists(local)) bin = local;

// spawn

var proc = spawn(bin, args, { stdio: 'inherit', customFds: [0, 1, 2] });

proc.on('close', function(code){
  process.exit(code);
});