#!/usr/bin/env node

/**
 * Module dependencies.
 */

var program = require('commander'),
  exec = require('child_process').exec,
  path = require('path'),
  join = path.join,
  doxmate = require('../'),
  env = require('../lib/env.js'),
  exists = env.existsSync;

program
  .version(doxmate.version)

// examples

program.on('--help', function () {
  console.log('  Commands:');
  console.log();
  console.log('    build            create a api docs');
  console.log('    list          show all api docs theme');
  console.log();
  console.log('  Examples:');
  console.log('');
  console.log('    $ doxmate build -o <folder> -s pomelo');
  console.log('');
  process.exit();
});

// parse argv

program.parse(process.argv);

// args void of cmd

var args = process.argv.slice(3);

// command

var cmd = program.args[0];


// display help

function showHelp () {
  process.stdout.write(program.helpInformation());
  program.emit('--help');
  process.exit();
}

if (!cmd) {
  showHelp();
}

// executable

var bin = 'doxmate-' + cmd;

// local

var local = join(__dirname, bin);
if (exists(local)) {
  bin = local;
} else {
  showHelp();
}


exec('node ' + bin + ' ' + args, function (err, stdout) {
  if (err) return console.error(err);
  console.log(stdout);
});
